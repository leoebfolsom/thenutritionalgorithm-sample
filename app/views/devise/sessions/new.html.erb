<div style="height:50px;"></div>
<div class="row">
<div class="col-md-3">
  
</div>
<div class="col-md-6">
  <center>
      <div style="font-size:1.5em;">
        Spend less. Eat better.
      </div>
      <br>
    <%= link_to user_facebook_omniauth_authorize_path do %>
      <%= image_tag('fb_login_small.png') %>
    <% end %>
    <br><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name) ) do |f| %>
      <div class="field">
        <%= f.label :email, "EMAIL" %><br>
        <%= f.email_field :email, autofocus: true, :class => "log-in-sign-in-field" %>
      </div>

      <div class="field">
        <%= f.label :password, "PASSWORD" %><br>
        <%= f.password_field :password, autocomplete: "off", :class => "log-in-sign-in-field" %>
      </div>
      

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox hidden">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.button "Log in", class: "btn wide-button green-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </center>
</div>
<div class="col-md-3">
  
</div>
</div>