<div style="height:50px;"></div>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <center>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email,"EMAIL" %><BR>
        <%= f.email_field :email, autofocus: true, :class=>"log-in-sign-in-field" %>
      </div>

      <div class="actions">
        <%= f.submit "NEW PASSWORD", class: "btn wide-button green-button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </center>
  </div>
  <div class="col-md-3">
  </div>
</div>