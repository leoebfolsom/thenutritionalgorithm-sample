<% provide(:title, 'Create item on list') %>
<% 
=begin %>
<h1>add food to list</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@quantity) do |f| %>
    <%= render 'shared/error_messages', object: @quantity %>
      <%= f.label :food_id %>
      <%= f.text_field :food_id, class: 'form-control' %>
      
      <%= f.label :list_id %>
      <%= f.text_field :list_id, class: 'form-control' %>

      <%= f.label :amount %>
      <%= f.text_field :amount, class: 'form-control' %>

      <%= f.submit "add food to list", class: "btn" %>
    <% end %>
  </div>
</div>
<% 
=end %>