
<%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
  <div>
  	<%= hidden_field_tag :followed_id, @user.id %>	
  </div>

	<% if controller.controller_name == "static_pages" %>
		<%= hidden_field_tag :from, "home" %>	
	<% else %>
		<%= hidden_field_tag :from, "profile" %>	
	<% end %>
  <%= f.submit "Follow #{@user.name}", class: "btn wide-button white-skinny-button", style: "padding:0px;margin:0px;" %>
<% end %>