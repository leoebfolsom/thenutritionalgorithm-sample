<% provide(:title, @title) %>
<div class="row" style="padding:15px;">
  <aside class="col-md-4 col-sm-4 col-xs-4">
    <section class="user_info">
      <% if @user.image != nil %>
        <% user_image = @user.image %>
      <% else %>
        <% user_image = "apple-touch-icon-180x180.png" %>
      <% end %>
      <%= image_tag(user_image, style: "max-width: 50px;", id: "header-profile-pic") %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>

    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% if user.image != nil %>
              <% user_image = user.image %>
            <% else %>
              <% user_image = "apple-touch-icon-180x180.png" %>
            <% end %>
            <%= link_to image_tag(user_image, style: "max-width: 50px;", id: "header-profile-pic"), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8 col-sm-8 col-xs-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>