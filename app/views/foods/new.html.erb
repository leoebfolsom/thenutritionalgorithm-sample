<% provide(:title, 'add food') %>
<% if user_signed_in? %>
  <h2>Create a food!</h2>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@food) do |f| %>
        <%= render 'shared/error_messages', object: @food %>
        <center>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.label :price, "Price ($)" %>
          <%= f.text_field :price, class: 'form-control' %>
          <%= f.label :aisle, "Size" %>
          <%= f.text_field :aisle, class: 'form-control', placeholder: "e.g., 16oz bag" %>

          <%= f.label :calories, "Calories" %>
          <%= f.text_field :calories, class: 'form-control' %>

          <%= f.label :carbohydrates, "Carbohydrates (g)" %>
          <%= f.text_field :carbohydrates, class: 'form-control' %>
          <%= f.label :fat, "Fat (g)"%>
          <%= f.text_field :fat, class: 'form-control' %>
          <%= f.label :protein, "Protein (g)" %>
          <%= f.text_field :protein, class: 'form-control' %>
          <%= f.label :sugar, "Sugar (g)" %>
          <%= f.text_field :sugar, class: 'form-control' %>
          
          <%= f.label :fiber, "Fiber (g)" %>
          <%= f.text_field :fiber, class: 'form-control' %>
         
          <%= f.label :vitamin_a, "Vitamin A (% DV)" %>
          <%= f.text_field :vitamin_a, class: 'form-control' %>
         
          <%= f.label :vitamin_c, "Vitamin C (% DV)" %>
          <%= f.text_field :vitamin_c, class: 'form-control' %>
          <%= f.label :calcium, "Calcium (% DV)" %>
          <%= f.text_field :calcium, class: 'form-control' %>
          <%= f.label :iron, "Iron (% DV)" %>
          <%= f.text_field :iron, class: 'form-control' %>
          
          <%= f.label :sodium, "Sodium (mg)"%>
          <%= f.text_field :sodium, class: 'form-control' %>
          


          <%= f.text_field :user_id, class: 'form-control hidden', value: current_user.id %>
          
          <%= f.submit "CREATE", class: "btn wide-button" %>
        </center>
      <% end %>
    </div>
  </div>
<% end %>